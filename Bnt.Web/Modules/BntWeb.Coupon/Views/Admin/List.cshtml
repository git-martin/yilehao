@using System.Web.Optimization
@using Autofac
@using BntWeb.Coupon
@using BntWeb.Coupon.Models
@using BntWeb.Environment
@using BntWeb.Security
@using BntWeb.Security.Identity

@{
    ViewBag.Title = CouponModule.DisplayName;
    ViewBag.SubTitle = "优惠券管理";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var user = ViewBag.CurrentUser as User;
    var authService = HostConstObject.Container.Resolve<IAuthorizationService>();
}

@section HeaderRight {

    
        <a class="btn btn-sm btn-info publish" href="@Url.Action("Create", new {area = CouponModule.Area})">
            <i class="icon-plus bigger-110"></i>
            新增
        </a>
    
}

<div class="row">
    <div class="col-xs-12">
        <div class="table-responsive">
            <table id="CouponTable" class="table table-striped table-bordered table-hover">
                <thead>
                <tr>
                    <th>优惠券名称</th>
                    <th>券类型</th>
                    <th>优惠信息</th>
                    <th>有效期期</th>
                    <th>优惠券数量</th>
                    <th>创建时间</th>
                    <th>状态</th>
                    <th>操作</th>
                </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/js/admin/jquery-datatable")
    <script type="text/javascript">
        var url_loadPage = "@Url.Action("ListOnPage", "Admin", new {area = CouponModule.Area})";
        var url_delete = "@Url.Action("Delete","Admin",new { area=CouponModule.Area })";
        var url_edit = "@Url.Action("Edit","Admin",new { area=CouponModule.Area })";
        var url_sendCoupon = "@Url.Action("SendCoupon","Admin",new { area=CouponModule.Area })";


    </script>
    @Scripts.Render("~/js/admin/coupon/list")
}



