@using BntWeb.Environment

@{
    ViewBag.Title = SystemSettingsModule.DisplayName;
    ViewBag.SubTitle = "日志列表";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var modules = ViewBag.Modules as IEnumerable<IBntWebModule>;
}

@section HeaderRight {
    <a class="btn btn-info" href="@Url.Action("Edit", "SoftRelease", new {area = SystemSettingsModule.Area})">
        <i class="icon-plus bigger-110"></i>
        新增
    </a>
}

<div class="form-group">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-lg-3 query-form-item">
            <label class="col-sm-4 col-md-4 control-label no-padding-right" for="SoftType"> 软件类型 </label>
            <div class="col-sm-8 col-md-8">
                <div class="clearfix">
                    <select id="SoftType" name="SoftType">
                        <option value="">所有</option>
                        @*<option value="0">Windows</option>*@
                        <option value="1">安卓</option>
                        <option value="2">苹果</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-4 col-lg-3 query-form-item">
            <label class="col-sm-4 col-md-4 control-label no-padding-right" for="SoftName"> 软件名 </label>
            <div class="col-sm-8 col-md-8">
                <div class="clearfix">
                    <input type="text" id="SoftName" name="SoftName" placeholder="软件名" value="" />
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-4 col-lg-3 query-form-item">
            <label class="col-sm-4 col-md-4 control-label no-padding-right" for="CreateTimeBegin"> 开始时间 </label>
            <div class="col-sm-8 col-md-8">
                <div class="clearfix">
                    <div class="input-group input-group-sm">
                        <input type="text" id="CreateTimeBegin" name="CreateTimeBegin" class="form-control" />
                        <span class="input-group-addon">
                            <i class="icon-calendar"></i>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-4 col-lg-3 query-form-item">
            <label class="col-sm-4 col-md-4 control-label no-padding-right" for="CreateTimeEnd"> 结束时间 </label>
            <div class="col-sm-8 col-md-8">
                <div class="clearfix">
                    <div class="input-group input-group-sm">
                        <input type="text" id="CreateTimeEnd" name="CreateTimeEnd" class="form-control" />
                        <span class="input-group-addon">
                            <i class="icon-calendar"></i>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-1 col-md-2 col-sm-4 text-center query-form-item">
            <button class="btn btn-sm btn-info" type="submit" id="QueryButton">
                <i class="icon-search bigger-110"></i>
                查询
            </button>
        </div>
    </div>
</div>
<hr />

<div class="row">
    <div class="col-xs-12">
        <div class="table-responsive">
            <table id="SoftTable" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>软件类型</th>
                        <th>软件名称</th>
                        <th>版本号</th>
                        <th>强制更新</th>
                        <th>
                            <i class="icon-time bigger-110 hidden-480"></i>
                            记录时间
                        </th>
                        <th>操作</th>
                    </tr>
                </thead>

                <tbody></tbody>
            </table>
        </div>
    </div>
</div>


@section Scripts {

    @Scripts.Render("~/js/admin/jquery-datatable")

    <script type="text/javascript">
        var url_loadPage = "@Url.Action("ListOnPage", "SoftRelease", new {area = SystemSettingsModule.Area})";
        var url_edit = "@Url.Action("Edit", "SoftRelease", new {area = SystemSettingsModule.Area})";
        var url_delete = "@Url.Action("Delete", "SoftRelease", new {area = SystemSettingsModule.Area})";
    </script>

    @Scripts.Render("~/js/admin/release/list")
}